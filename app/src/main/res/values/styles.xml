<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimaryMid</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimaryMid</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="color">#808080</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#121212</item>
        <item name="android:colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="android:colorAccent">@color/colorDarkAccent</item>
        <item name="android:windowBackground">#121212</item>
        <item name="colorPrimary">@color/colorDarkPrimaryMid</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">#3A3A3A</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="color">#BFFFFFFF</item>
    </style>

</resources>